<%= form_with(model: user, local: true) do |form| %>
  <%= render 'shared/error_messages', user: @user %>

  <%= form.label :name %>
  <%= form.text_field :name, id: :user_name, class: 'form_control' %>

  <%= form.label :email %>
  <%= form.email_field :email, id: :user_email, class: 'form_control' %>

  <%= form.label :password %>
  <%= form.password_field :password, class: 'form_control' %>

  <%= form.label :password_confirmation, "Confirmation" %>
  <%= form.password_field :password_confirmation, class: 'form_control' %>

  <div class="actions">
    <%= form.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
