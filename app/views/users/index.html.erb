<% provide(:title, 'All users') %>
<p id="notice"><%= notice %></p>

<h1>All Users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size:50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
<%= link_to 'New User', new_user_path %>
